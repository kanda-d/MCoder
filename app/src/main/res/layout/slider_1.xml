<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#444849">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-42dp"
        android:text="Master Coder"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Code Whenever Wherever !"
        android:textAlignment="center"
        android:textColor="#DCDCDC"
        android:textSize="12dp"
        />

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/welcome_lgoo" />




    <TextView
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        android:textColor="#F8F8F8"
        android:lineHeight="18dp"
        android:textSize="12dp"
        android:text="Everyone who owns an android phone or tablet :), it helps to beginners, designers and developers to test and improve their HTML and CSS skills on the go."
        />



</LinearLayout>