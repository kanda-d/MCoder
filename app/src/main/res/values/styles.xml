<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="codeShortCuts">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textSize">18dp</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="codeShortSnipes">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingHorizontal">6dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="lineSpacing">12dp</item>
        <item name="android:textSize">13dp</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
